<% content_for :breadcrumb do %>
	<a>My Projects</a> 
	<% @slice.navigations.each do |nav| %>
		<% unless nav.nav_id.nil?  %>
		> <%= link_to nav.name, slices_navigation_path(:slices_id => @slice.id, :id => nav.nav_id), :method => :delete  %>
		<% end %>
	<% end %>
<% end %>

<% content_for :contextName do %>
	<% if @slice.lens.nil? %>
		<%= 'Context' %>
	<% else %>
		<%= @slice.lens.name %>
	<% end %>
<% end %>

<% content_for :templateMenu do %>
	<%= render :partial => 'templates/menu', :locals => { :menu => @slice.workspace.project.template }  %>
<% end %>

<% content_for :leftHand do 
	unless @slice.lens.nil?
		even = true
		@slice.lens.lens_items.each do |l| %>
			<tr><td class='left-<%= even ? 'even' : 'odd' %>-row'>
				<%= link_to l.title, l.link %>
			</td></tr>
			<% even = !even %>
		<% end
	end
 end %>

<% content_for :content do %>
	<% unless @objects.nil? %>
		<% @objects.each do |el| %>
			<p><%= el.name %></p>
		<% end %>
	<% end %>
<% end %>
